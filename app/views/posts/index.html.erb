<div class="bootrap">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
    <% if current_user.school.email_domain_name.match(/wisc.edu/) %>
    <h1>University of Wisconsin-Madison</h1>
    <% end %>
    <% if current_user.school.email_domain_name.match(/colum.edu/) %>
    <h1>Columbia College Chicago</h1>
    <% end %>
      <h2>Type Your Shoutout</h2>

      <%= simple_form_for(@post) do |f| %>
        <%= f.error_notification %>

        <%= f.input :content, as: :text %>

        <%= f.button :submit %>
      <% end %>
  <hr>
      <% @posts.each do |post| %>
      <div>
      <p><%= post.id %></p>
      <p><%= post.content %></p>
      <p><%= post.created_at %></p>
      <p><%= post.school_id %></p>
      <button>Like</button>
      <button>Flag</button>
      <hr>
      </div>
      <% end %>
    </div>
  </div>
</div>
