<div class="container">
  <div class="row col-xs-12 col-md-8 col-md-offset-2">
    <div class="school-name text-center">
      <%= cl_image_tag current_user.school.logo.path, width: 730, height: 200, crop: :fit, class: "pic-width" if current_user.school.logo.present? %>
    </div>
  </div>
  <div class="row col-xs-12 col-md-8 col-md-offset-2">

    <div class="post-section-1 gray-border">
      <h2>Type Your Shoutout</h2>
      <div id="form-poster">
        <%= render 'form', post: @post %>
      </div>

    </div>
  </div>
  <div class="row col-xs-12 col-md-8 col-md-offset-2">

    <!-- Nav tabs -->
    <ul class="nav nav-tabs nav-justified" role="tablist">
      <li role="presentation" class=<%= 'active' if params[:index_type].nil? %>>
        <%= link_to "ALL", posts_path, role: "tab" %>
      </li>
      <li role="presentation" class=<%= 'active' if params[:index_type] == 'SO' %>>
        <%= link_to "SO", posts_path(index_type: 'SO'), role: "tab" %>
      </li>
      <li role="presentation" class=<%= 'active' if params[:index_type] == 'ASO'%>>
        <%= link_to "ASO", posts_path(index_type: 'ASO'), role: "tab" %>
      </li>
    </ul>

    <div id="new_post">
    </div>

    <% @posts.each do |post| %>
      <%= render 'shared/post', post: post %>
    <% end %>
  </div>
</div>

