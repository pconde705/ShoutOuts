<div class="post-section-2 gray-border">
<span data-flag-post-id="<%= post.id %>">
  <% if post.flags.empty? %>
  <div class="id-badge">
    <p>#<%= post.id %> <i class="fa fa-id-badge" aria-hidden="true"> </i> <%= post.created_at.strftime("%A - %b %m, %Y | %I:%M %p ") %></p>
    </div>
    <p class="main-content"><%= post.content %></p>
<hr>
    <div class="row post-fontawesome">
      <%= link_to likes_path(post_id: post.id), method: :post, remote: true, class: "heart-stuff" do %>
        <i class="fa fa-heart-o" aria-hidden="true"></i>
        <span data-post-id="<%= post.id %>">
          <%= post.likes.count %>
        </span>
      <% end %>
      <%= link_to flags_path(post_id: post.id), method: :post, remote: true do %>
        <i class="fa fa-flag alignright" aria-hidden="true"></i>
      <% end %>
    </div>

  <% else %>

    <p>This post is temporarily flagged</p>
  <% end %>
</span>
</div>
